# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-aws-bucket-name
AWS_EC2_KEY_NAME=  # Optional: your EC2 key pair name

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-east1
GCP_GCS_BUCKET=your-gcp-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/gcp-service-account-key.json

# Cluster Configuration
AWS_MASTER_INSTANCE_TYPE=m5.xlarge
AWS_CORE_INSTANCE_TYPE=m5.xlarge
AWS_CORE_INSTANCE_COUNT=2

GCP_MASTER_MACHINE_TYPE=n1-standard-4
GCP_WORKER_MACHINE_TYPE=n1-standard-4
GCP_WORKER_COUNT=2

# ML Configuration
ML_DATASET=fashion-mnist
ML_EPOCHS=5
ML_BATCH_SIZE=128

# Experiment Configuration
CLEANUP_ON_COMPLETE=true
TIMEOUT_MINUTES=60
